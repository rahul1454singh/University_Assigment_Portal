<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Forgot Password</title>
  <style>
    body {
      font-family: "Segoe UI", sans-serif;
      background: linear-gradient(135deg, #4b6cb7, #182848);
      height: 100vh;
      margin: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }
    .box {
      background: #fff;
      border-radius: 15px;
      padding: 35px;
      width: 360px;
      max-width: 100%;
      box-shadow: 0 8px 20px rgba(0,0,0,0.2);
      text-align: center;
    }
    h2 { margin-bottom: 15px; color: #333; }
    input {
      width: 100%;
      padding: 10px;
      margin: 10px 0;
      border-radius: 8px;
      border: 1px solid #ccc;
      outline: none;
      font-size: 15px;
      /* Fixed: Added box-sizing so button and input are exactly same size */
      box-sizing: border-box;
    }
    button {
      width: 100%;
      padding: 10px;
      border: none;
      border-radius: 8px;
      background: #4b6cb7;
      color: white;
      font-size: 16px;
      cursor: pointer;
      transition: background 0.3s;
      /* Fixed: Matches input sizing */
      box-sizing: border-box;
    }
    button:hover { background: #3551a1; }
    button:disabled { background: #8ba2d4; cursor: not-allowed; }

    .error { color: red; margin-bottom: 8px; font-size: 14px; }
    
    .success-banner {
      background-color: #d4edda;
      color: #155724;
      padding: 12px;
      border-radius: 8px;
      margin-bottom: 15px;
      font-size: 14px;
      border: 1px solid #c3e6cb;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    #timer {
      font-weight: bold;
      color: #dc3545;
      margin-top: 5px;
    }

    a.back-link {
      display: inline-block;
      margin-top: 15px;
      font-size: 14px;
      color: #4b6cb7;
      text-decoration: none;
    }
    a.back-link:hover { text-decoration: underline; }
  </style>
</head>
<body>
  <div class="box">
    <h2>Forgot Password</h2>

    <% if (error) { %>
      <p class="error"><%= error %></p>
    <% } %>

    <% if (success) { %>
      <div class="success-banner">
        <strong>Success:</strong> <%= success %>
        <div id="timer-container">OTP expires in: <span id="timer">60</span>s</div>
      </div>
      
      <script>
        let timeLeft = 60;
        const timerElement = document.getElementById('timer');
        const countdown = setInterval(() => {
          if (timeLeft <= 0) {
            clearInterval(countdown);
            timerElement.innerHTML = "Expired";
          } else {
            timerElement.innerHTML = timeLeft;
          }
          timeLeft -= 1;
        }, 1000);
      </script>
    <% } %>

    <form id="otpForm" action="/forgot-password" method="POST">
      <input type="email" name="email" placeholder="Enter your university email" required />
      <button type="submit" id="submitBtn">Send OTP</button>
    </form>

    <a href="/login" class="back-link">Back to Login</a>
  </div>

  <script>
    const form = document.getElementById('otpForm');
    const btn = document.getElementById('submitBtn');

    form.onsubmit = function() {
      btn.innerText = "Sending OTP...";
      btn.disabled = true;
    };
  </script>
</body>
</html>