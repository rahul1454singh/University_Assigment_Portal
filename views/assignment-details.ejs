<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title><%= assignment.title %> — Assignment Details</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />

  <style>
    body {
      font-family: "Segoe UI", Arial, sans-serif;
      background: #f3f5f9;
      color: #222;
      margin: 0;
      padding: 28px;
    }

    .wrap {
      max-width: 900px;
      margin: 0 auto;
      background: #fff;
      padding: 22px;
      border-radius: 10px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.04);
    }

    h1 { margin: 0 0 10px; }

    .meta {
      margin: 8px 0 16px;
      font-size: 14px;
      color: #555;
    }

    .row {
      display: flex;
      justify-content: space-between;
      gap: 12px;
      margin: 12px 0;
      font-size: 14px;
      align-items: center;
      flex-wrap: wrap;
    }

    .label {
      font-weight: 600;
      color: #555;
      margin-bottom: 4px;
    }

    .status {
      display: inline-block;
      padding: 6px 10px;
      border-radius: 18px;
      font-weight: 700;
      font-size: 13px;
    }

    .s-approved { background: #e9f7ee; color: #177a3b; }
    .s-rejected { background: #fff0f0; color: #b22222; }
    .s-draft { background: #eef2ff; color: #2b3ea8; }
    .s-submitted { background: #f0fbf6; color: #1f7a5a; }

    a.btn, button.btn {
      display: inline-block;
      padding: 10px 16px;
      border-radius: 8px;
      text-decoration: none;
      font-weight: 700;
      border: none;
      cursor: pointer;
      text-align: center;
    }

    .btn-back {
      background: #3551a1;
      color: #fff;
    }

    .btn-submit {
      background: #2e9a3f; /* GREEN */
      color: #fff;
    }

    .section {
      margin-top: 16px;
    }

    pre.description {
      background: #fbfbfb;
      padding: 12px;
      border-radius: 8px;
      white-space: pre-wrap;
    }

    select {
      padding: 8px;
      border-radius: 6px;
      border: 1px solid #ccc;
      min-width: 240px;
    }

    .submit-box {
      background: #f5f7fb;
      padding: 16px;
      border-radius: 10px;
      margin-top: 20px;
    }

    /* ✅ BUTTON ROW */
    .action-row {
      display: flex;
      gap: 12px;
      margin-top: 14px;
    }

    .action-row button,
    .action-row a {
      flex: 1;
    }

    .success-msg {
      background: #e9f7ee;
      color: #177a3b;
      padding: 10px;
      border-radius: 8px;
      font-weight: 700;
      margin-top: 14px;
      display: none;
    }

    @media (max-width: 600px) {
      .action-row {
        flex-direction: column;
      }
    }
  </style>
</head>

<body>
<div class="wrap">
  <h1><%= assignment.title %></h1>

  <div class="meta">
    Uploaded:
    <strong><%= assignment.createdAt ? new Date(assignment.createdAt).toLocaleString() : "-" %></strong>
  </div>

  <div class="row">
    <div>
      <div class="label">Category</div>
      <div><%= assignment.category || "-" %></div>
    </div>

    <div>
      <div class="label">Status</div>
      <% if (assignment.status === 'Approved') { %>
        <span class="status s-approved">Approved</span>
      <% } else if (assignment.status === 'Rejected') { %>
        <span class="status s-rejected">Rejected</span>
      <% } else if (assignment.status === 'Draft') { %>
        <span class="status s-draft">Draft</span>
      <% } else { %>
        <span class="status s-submitted">Submitted</span>
      <% } %>
    </div>

    <div>
      <div class="label">Reviewer</div>
      <div><%= assignment.reviewerName || "-" %></div>
    </div>
  </div>

  <div class="section">
    <div class="label">Description</div>
    <pre class="description"><%= assignment.description || "-" %></pre>
  </div>

  <!-- ================= SUBMIT FOR REVIEW ================= -->
  <% if (assignment.status === 'Draft') { %>
    <div class="submit-box">
      <div class="label">Select Professor</div>

      <select id="reviewerSelect">
        <option value="">-- Select Professor --</option>
        <% professors.forEach(p => { %>
          <option value="<%= p._id %>"><%= p.fullName || p.name %></option>
        <% }) %>
      </select>

      <!-- ✅ BUTTONS SAME ROW -->
      <div class="action-row">
        <button class="btn btn-submit" id="submitBtn">
          Submit for Review
        </button>

        <a href="/student/assignments" class="btn btn-back">
          Back to Assignments
        </a>
      </div>

      <div class="success-msg" id="successMsg">
        ✅ Assignment submitted successfully. You can go back using the button above.
      </div>
    </div>
  <% } else { %>
    <div class="section">
      <a href="/student/assignments" class="btn btn-back">Back to Assignments</a>
    </div>
  <% } %>

</div>

<script>
  const submitBtn = document.getElementById("submitBtn");
  const reviewerSelect = document.getElementById("reviewerSelect");
  const successMsg = document.getElementById("successMsg");

  if (submitBtn) {
    submitBtn.addEventListener("click", async () => {
      const reviewerId = reviewerSelect.value;

      if (!reviewerId) {
        alert("Please select a professor.");
        return;
      }

      const ok = confirm("Are you sure you want to submit this assignment for review?");
      if (!ok) return;

      submitBtn.disabled = true;
      submitBtn.textContent = "Submitting...";

      const res = await fetch("/student/assignments/<%= assignment._id %>/submit", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ reviewerId })
      });

      const data = await res.json();

      if (data.success) {
        successMsg.style.display = "block";
        reviewerSelect.disabled = true;
        submitBtn.textContent = "Submitted";
      } else {
        alert(data.message || "Submission failed");
        submitBtn.disabled = false;
        submitBtn.textContent = "Submit for Review";
      }
    });
  }
</script>

</body>
</html>
