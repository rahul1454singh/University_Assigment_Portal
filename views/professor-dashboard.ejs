<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<title>Professor Dashboard</title>
<meta name="viewport" content="width=device-width,initial-scale=1" />

<style>
/* ===== RESET ===== */
*{box-sizing:border-box;margin:0;padding:0}
html,body{height:100%}

/* ===== BODY ===== */
body{
  font-family:"Segoe UI",sans-serif;
  background:linear-gradient(135deg,#e9f0ff,#f3f5f9);
  color:#222;
}

/* ===== NAVBAR ===== */
.navbar{
  background:#4b6cb7;
  height:64px;
  display:flex;
  align-items:center;
  padding:0 16px;
  position:fixed;
  top:0;left:0;right:0;
  z-index:100;
}

/* ===== TOGGLE BUTTON (ADMIN STYLE) ===== */
.menu-toggle{
  width:44px;height:44px;
  display:flex;align-items:center;justify-content:center;
  cursor:pointer;border-radius:8px;
  transition:background .15s;
}
.menu-toggle:hover{background:rgba(255,255,255,.08)}

.bars{display:flex;flex-direction:column;gap:6px}
.bars span{
  width:20px;height:2.6px;
  background:white;border-radius:2px;
  transition:.25s;
}

/* toggle animation */
.menu-toggle.open .bars span:nth-child(1){
  transform:translateY(6px) rotate(45deg)
}
.menu-toggle.open .bars span:nth-child(2){
  opacity:0
}
.menu-toggle.open .bars span:nth-child(3){
  transform:translateY(-6px) rotate(-45deg)
}

/* ===== NAV TITLE ===== */
.navbar .title{
  position:absolute;
  left:50%;transform:translateX(-50%);
  color:#fff;font-weight:800;font-size:20px;
}

/* ===== NAV RIGHT ===== */
.navbar .right{
  margin-left:auto;
  color:white;
  font-weight:600;
}

/* ===== SIDEBAR (TRANSPARENT CONTAINER) ===== */
.sidebar{
  position:fixed;
  top:64px;
  left:-260px;
  width:260px;
  height:auto;                 /* ðŸ”¥ content height only */
  background:transparent;      /* ðŸ”¥ transparent below card */
  padding:0;
  box-shadow:none;
  transition:left .25s ease;
  z-index:90;
}

/* sidebar open */
body.sidebar-open .sidebar{left:0}

/* ===== SIDEBAR CARD (WHITE PART ONLY) ===== */
.sidebar-card{
  background:white;
  padding:14px;
  border-radius:14px;
  box-shadow:0 12px 30px rgba(0,0,0,.10);
}

/* ===== USER PANEL ===== */
.user-panel{
  background:#f6f8ff;
  padding:12px;
  border-radius:10px;
  display:flex;
  justify-content:space-between;
  align-items:center;
  margin-bottom:14px;
}

.logout-btn{
  background:#e25a57;
  color:white;
  border:none;
  padding:6px 10px;
  border-radius:8px;
  font-weight:700;
  cursor:pointer;
}

/* ===== SIDEBAR LINKS ===== */
.sidebar a{
  display:block;
  padding:12px;
  margin-bottom:10px;
  border-radius:8px;
  background:#f5f6f8;
  text-align:center;
  font-weight:700;
  text-decoration:none;
  color:#222;
   cursor:pointer;
}
.sidebar a:hover{background:#e9ecf5}
.sidebar a.active{background:#4b6cb7;color:white}

/* ===== MAIN ===== */
.main{
  margin-top:64px;
  padding:24px;
  transition:.25s;
}

/* blur + dim content when sidebar open */
body.sidebar-open .main{
  margin-left:260px;
  filter:blur(3px);
  opacity:.35;
  pointer-events:none;
}

/* blue overlay background (ADMIN STYLE) */
body.sidebar-open::before{
  content:"";
  position:fixed;
  inset:0;
  background:rgba(75,108,183,.25); /* bluish overlay */
  z-index:45;
}

/* ===== CONTAINER ===== */
.container{
  max-width:1100px;
  margin:auto;
  background:white;
  border-radius:14px;
  padding:28px;
  box-shadow:0 10px 30px rgba(0,0,0,.06);
}

/* ===== DASHBOARD ===== */
h1{margin-bottom:20px}

.overview{
  display:grid;
  grid-template-columns:repeat(auto-fit,minmax(200px,1fr));
  gap:20px;
  margin-bottom:30px;
}

.card{
  padding:20px;
  border-radius:14px;
  text-align:center;
  font-weight:800;
}
.card.pending{background:#e8f2ff}
.card.approved{background:#e9fdf0}
.card.rejected{background:#fff3e7}
.card.total{background:#f6ecff}

.card h3{font-size:14px;color:#666}
.card p{font-size:30px}

/* ===== TABLE ===== */
table{width:100%;border-collapse:collapse}
th,td{padding:12px;border-bottom:1px solid #ddd}
th{background:#f3f5f9}

.badge{
  padding:4px 12px;
  border-radius:14px;
  color:white;
  font-weight:700;
  font-size:12px;
}
.badge.green{background:#2e9a3f}
.badge.blue{background:#4b6cb7}

.btn-group{display:flex;gap:8px}
.btn{
  padding:6px 14px;
  border-radius:6px;
  font-size:13px;
  font-weight:700;
  color:white;
  text-decoration:none;
}
.btn.review{background:#2e9a3f}
.btn.view{background:#4b6cb7}

/* ===== LOGOUT MODAL (ADMIN SAME) ===== */
.modal-overlay{
  position:fixed;
  inset:0;
  background:rgba(0,0,0,.45);
  display:none;
  justify-content:center;
  align-items:center;
  z-index:2000;
}

.modal-box{
  background:white;
  padding:22px 26px;
  border-radius:14px;
  width:420px;
  text-align:center;
  box-shadow:0 20px 60px rgba(0,0,0,.35);
}

.modal-box h3{font-size:22px;margin-bottom:6px}
.modal-box p{color:#555;margin-bottom:18px}

.modal-actions{display:flex;justify-content:center;gap:14px}

.btn-no,.btn-yes{
  padding:10px 22px;
  border-radius:28px;
  color:white;
  border:none;
  font-weight:800;
  cursor:pointer;
}
.btn-no{background:#e25a57}
.btn-yes{background:#2e9a3f}

th, td {
  padding:12px;
  border-bottom:1px solid #ddd;
  text-align: center;   /* âœ… center header + data */
  vertical-align: middle;
}


</style>
</head>

<body>

<!-- NAVBAR -->
<div class="navbar">
  <div id="menuBtn" class="menu-toggle">
    <div class="bars"><span></span><span></span><span></span></div>
  </div>
  <div class="title">Professor Dashboard</div>
  <div class="right">Hello, <%= professorName %></div>
</div>

<!-- SIDEBAR -->
<nav class="sidebar" id="sidebar">
  <div class="sidebar-card">
    <div class="user-panel">
      <strong><%= professorName %></strong>
      <button id="logoutBtn" class="logout-btn">Logout</button>
    </div>

    <a id="navDashboard" class="active">Dashboard</a>
    <a id="navReviews">My Reviews</a>
    <a href="/professor/profile">Profile</a>
  </div>
</nav>


<!-- MAIN -->
<main class="main">
  <div class="container">

    <div id="dashboardView">
      <h1>Professor Dashboard</h1>

      <div class="overview">
        <div class="card pending"><h3>Pending</h3><p><%= counts.pending %></p></div>
        <div class="card approved"><h3>Approved</h3><p><%= counts.approved %></p></div>
        <div class="card rejected"><h3>Rejected</h3><p><%= counts.rejected %></p></div>
        <div class="card total"><h3>Total Reviewed</h3><p><%= counts.total %></p></div>
      </div>
    </div>

    <div id="reviewsView" style="display:none">
      <h1>My Reviews</h1>
      <table>
        <thead>
          <tr>
            <th>Student</th>
            <th>Title</th>
            <th>Submitted</th>
            <th>Days</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% allReviews.forEach(a=>{ 
            const reviewed = a.status === 'Approved' || a.status === 'Rejected';
          %>
          <tr>
            <td><%= a.user?.name %></td>
            <td><%= a.title %></td>
            <td><%= new Date(a.submittedAt).toLocaleDateString() %></td>
            <td><%= a.daysPending %></td>
            <td>
              <span class="badge <%= reviewed ? 'green' : 'blue' %>">
                <%= reviewed ? 'Reviewed' : 'Pending' %>
              </span>
            </td>
            <td>
              <div class="btn-group">
                <a class="btn review" href="/assignments/<%= a._id %>?mode=review">Review</a>
                <a class="btn view" href="/assignments/<%= a._id %>">View Details</a>
              </div>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

  </div>
</main>

<!-- LOGOUT MODAL -->
<div id="logoutModal" class="modal-overlay">
  <div class="modal-box">
    <h3>Are you sure you want to logout?</h3>
    <p>This will end your session.</p>
    <div class="modal-actions">
      <button class="btn-no" id="cancelLogout">No</button>
      <button class="btn-yes" id="confirmLogout">Yes</button>
    </div>
  </div>
</div>

<script>
const menuBtn = document.getElementById("menuBtn");
const sidebar = document.getElementById("sidebar");
const logoutBtn = document.getElementById("logoutBtn");
const modal = document.getElementById("logoutModal");

const navDashboard = document.getElementById("navDashboard");
const navReviews = document.getElementById("navReviews");
const dashboardView = document.getElementById("dashboardView");
const reviewsView = document.getElementById("reviewsView");

/* ---------- TOGGLE OPEN / CLOSE ---------- */
function openSidebar(){
  document.body.classList.add("sidebar-open");
  menuBtn.classList.add("open");
}

function closeSidebar(){
  document.body.classList.remove("sidebar-open");
  menuBtn.classList.remove("open");
}

menuBtn.onclick = (e) => {
  e.stopPropagation(); // prevent outside click
  if(document.body.classList.contains("sidebar-open")){
    closeSidebar();
  } else {
    openSidebar();
  }
};

/* ---------- CLOSE WHEN CLICK OUTSIDE ---------- */
document.addEventListener("click", (e) => {
  if(!document.body.classList.contains("sidebar-open")) return;

  if(!sidebar.contains(e.target) && !menuBtn.contains(e.target)){
    closeSidebar();
  }
});

/* ---------- SIDEBAR NAVIGATION ---------- */
navDashboard.onclick = () => {
  dashboardView.style.display = "block";
  reviewsView.style.display = "none";

  navDashboard.classList.add("active");
  navReviews.classList.remove("active");

  closeSidebar();
};

navReviews.onclick = () => {
  dashboardView.style.display = "none";
  reviewsView.style.display = "block";

  navReviews.classList.add("active");
  navDashboard.classList.remove("active");

  closeSidebar();
};

/* ---------- LOGOUT MODAL ---------- */
logoutBtn.onclick = (e) => {
  e.stopPropagation();
  modal.style.display = "flex";
};

document.getElementById("cancelLogout").onclick = () => {
  modal.style.display = "none";
};

document.getElementById("confirmLogout").onclick = () => {
  window.location.href = "/logout";
};
</script>


</body>
</html>
