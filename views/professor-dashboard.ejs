<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<title>Professor Dashboard</title>
<meta name="viewport" content="width=device-width,initial-scale=1" />

<style>
/* RESET */
*{box-sizing:border-box;margin:0;padding:0}
html,body{height:100%}

body{
  font-family:"Segoe UI",sans-serif;
  background:linear-gradient(135deg,#e9f0ff,#f3f5f9);
}

/* NAVBAR */
.navbar{
  background:#4b6cb7;
  height:64px;
  display:flex;
  align-items:center;
  padding:0 16px;
  position:fixed;
  top:0;left:0;right:0;
  z-index:100;
}

/* MENU BUTTON */
.menu-toggle{
  width:44px;height:44px;
  display:flex;align-items:center;justify-content:center;
  cursor:pointer;
  border-radius:8px;
}
.menu-toggle:hover{background:rgba(255,255,255,.1)}

.bars{display:flex;flex-direction:column;gap:6px}
.bars span{
  width:20px;height:2.6px;
  background:white;border-radius:2px;
}

/* TITLE */
.navbar .title{
  position:absolute;
  left:50%;transform:translateX(-50%);
  color:#fff;font-weight:800;font-size:20px;
}

/* RIGHT TEXT */
.navbar .right{
  margin-left:auto;
  color:white;
  font-weight:600;
}

/* SIDEBAR */
.sidebar{
  position:fixed;
  top:64px;
  left:-260px;
  width:260px;
  transition:left .25s ease;
  z-index:90;
}
body.sidebar-open .sidebar{left:0}

.sidebar-card{
  background:white;
  padding:14px;
  border-radius:14px;
  box-shadow:0 12px 30px rgba(0,0,0,.1);
}

/* USER PANEL (WITH LOGOUT) */
.user-panel{
  background:#f6f8ff;
  padding:12px;
  border-radius:10px;
  display:flex;
  justify-content:space-between;
  align-items:center;
  margin-bottom:14px;
}

.logout-btn{
  background:#e25a57;
  color:white;
  border:none;
  padding:6px 10px;
  border-radius:8px;
  font-weight:700;
  cursor:pointer;
}

/* SIDEBAR LINKS */
.sidebar a{
  display:block;
  padding:12px;
  margin-bottom:10px;
  border-radius:8px;
  background:#f5f6f8;
  text-align:center;
  font-weight:700;
  text-decoration:none;
  color:#222;
  cursor:pointer; /* âœ… cursor pointer */
}
.sidebar a:hover{background:#e9ecf5}
.sidebar a.active{background:#4b6cb7;color:white}

/* MAIN */
.main{
  margin-top:64px;
  padding:24px;
  transition:.25s;
}
body.sidebar-open .main{
  margin-left:260px;
  filter:blur(3px);
  opacity:.35;
  pointer-events:none;
}

/* OVERLAY */
body.sidebar-open::before{
  content:"";
  position:fixed;
  inset:0;
  background:rgba(75,108,183,.25);
  z-index:45;
}

/* CONTAINER */
.container{
  max-width:1100px;
  margin:auto;
  background:white;
  border-radius:14px;
  padding:28px;
}

/* DASHBOARD CARDS */
.overview{
  display:grid;
  grid-template-columns:repeat(auto-fit,minmax(200px,1fr));
  gap:20px;
  margin-bottom:30px;
}

.card{
  padding:20px;
  border-radius:14px;
  text-align:center;
  font-weight:800;
}
.card.pending{background:#e8f2ff}
.card.approved{background:#e9fdf0}
.card.rejected{background:#fff3e7}
.card.total{background:#f6ecff}

.card h3{font-size:14px;color:#666}
.card p{font-size:30px}

/* TABLE */
table{width:100%;border-collapse:collapse}
th,td{
  padding:12px;
  border-bottom:1px solid #ddd;
  text-align:center;
}
th{background:#f3f5f9}

/* BADGES */
.badge{
  padding:4px 12px;
  border-radius:14px;
  color:white;
  font-weight:700;
}
.badge.blue{background:#4b6cb7}
.badge.green{background:#2e9a3f}

/* BUTTON */
.btn{
  padding:6px 14px;
  border-radius:6px;
  font-weight:700;
  color:white;
  text-decoration:none;
  background:#2e9a3f;
  cursor:pointer;
}
</style>
</head>

<body>

<!-- NAVBAR -->
<div class="navbar">
  <div id="menuBtn" class="menu-toggle">
    <div class="bars"><span></span><span></span><span></span></div>
  </div>
  <div class="title">Professor Dashboard</div>
  <div class="right">Hello, <%= professorName %></div>
</div>

<!-- SIDEBAR -->
<nav class="sidebar" id="sidebar">
  <div class="sidebar-card">

    <!-- USER + LOGOUT -->
    <div class="user-panel">
      <strong><%= professorName %></strong>
      <button id="logoutBtn" class="logout-btn">Logout</button>
    </div>

    <a id="navDashboard" class="active">Dashboard</a>
    <a id="navReviews">My Reviews</a>
    <a href="/professor/profile">Profile</a>
  </div>
</nav>

<!-- MAIN -->
<main class="main">
  <div class="container">

    <!-- DASHBOARD VIEW -->
    <div id="dashboardView">
      <h1>Professor Dashboard</h1>

      <div class="overview">
        <div class="card pending">
          <h3>Pending</h3>
          <p><%= counts.pending %></p>
        </div>
        <div class="card approved">
          <h3>Approved</h3>
          <p><%= counts.approved %></p>
        </div>
        <div class="card rejected">
          <h3>Rejected</h3>
          <p><%= counts.rejected %></p>
        </div>
        <div class="card total">
          <h3>Total Reviewed</h3>
          <p><%= counts.total %></p>
        </div>
      </div>
    </div>

    <!-- REVIEWS VIEW -->
    <div id="reviewsView" style="display:none">
      <h1>My Reviews</h1>
      <table>
        <thead>
          <tr>
            <th>Student</th>
            <th>Title</th>
            <th>Submitted</th>
            <th>Days</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
        <% allReviews.forEach(a=>{ %>
          <tr>
            <td><%= a.user?.name %></td>
            <td><%= a.title %></td>
            <td><%= new Date(a.submittedAt).toLocaleDateString() %></td>
            <td><%= a.daysPending %></td>
            <td>
              <span class="badge <%= a.status==='Approved'?'green':'blue' %>">
                <%= a.status %>
              </span>
            </td>
            <td>
              <a class="btn"
                 href="/professor/assignments/<%= a._id %>/review">
                 Review
              </a>
            </td>
          </tr>
        <% }) %>
        </tbody>
      </table>
    </div>

  </div>
</main>

<script>
const menuBtn = document.getElementById("menuBtn");
const sidebar = document.getElementById("sidebar");
const logoutBtn = document.getElementById("logoutBtn");

menuBtn.onclick = e => {
  e.stopPropagation();
  document.body.classList.toggle("sidebar-open");
};

document.addEventListener("click", e => {
  if(!sidebar.contains(e.target) && !menuBtn.contains(e.target)){
    document.body.classList.remove("sidebar-open");
  }
});

/* SIDEBAR NAV */
const navDashboard = document.getElementById("navDashboard");
const navReviews = document.getElementById("navReviews");
const dashboardView = document.getElementById("dashboardView");
const reviewsView = document.getElementById("reviewsView");

navDashboard.onclick = () => {
  dashboardView.style.display = "block";
  reviewsView.style.display = "none";
  navDashboard.classList.add("active");
  navReviews.classList.remove("active");
  document.body.classList.remove("sidebar-open");
};

navReviews.onclick = () => {
  dashboardView.style.display = "none";
  reviewsView.style.display = "block";
  navReviews.classList.add("active");
  navDashboard.classList.remove("active");
  document.body.classList.remove("sidebar-open");
};

/* LOGOUT */
logoutBtn.onclick = () => {
  window.location.href = "/logout";
};
</script>

</body>
</html>
