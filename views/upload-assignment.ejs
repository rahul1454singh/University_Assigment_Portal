<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Upload Assignment</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <style>
    :root{
      --bg:#f3f5f9;
      --card:#ffffff;
      --muted:#666;
      --accent:#3551a1;
      --back:#555;
      --bulk:#07bd07;
      --radius:10px;
      --max-width:760px;
      --pad:20px;
      --shadow:0 10px 30px rgba(0,0,0,0.06);
    }
    *{box-sizing:border-box}
    body{
      font-family: "Segoe UI", Arial, sans-serif;
      background:var(--bg);
      margin:0;
      padding:40px 16px;
      display:flex;
      justify-content:center;
    }
    .container{
      width:100%;
      max-width:var(--max-width);
      background:var(--card);
      border-radius:var(--radius);
      padding:var(--pad);
      box-shadow:var(--shadow);
    }
    .header-row{
      display:flex;
      justify-content:space-between;
      align-items:center;
      margin-bottom:18px;
    }
    h1{margin:0;font-size:28px}
    .row{display:flex;gap:14px;margin-bottom:12px}
    label{font-weight:600;color:var(--muted);font-size:14px;margin-bottom:6px;display:block}
    .col{flex:1}
    input, textarea, select{
      width:100%;
      padding:10px 12px;
      border-radius:8px;
      border:1px solid #e6e9ee;
      font-size:14px;
    }
    textarea{min-height:110px}
    .actions{
      display:flex;
      gap:10px;
      justify-content:flex-end;
    }
    .btn{
      padding:10px 16px;
      border-radius:8px;
      color:#fff;
      font-weight:700;
      border:none;
      cursor:pointer;
      text-decoration:none;
    }
    .btn-back{background:var(--back)}
    .btn-upload{background:var(--accent)}
    .btn-bulk{background:var(--bulk)}
  </style>
</head>
<body>

<div class="container">

  <div class="header-row">
    <h1>Upload Assignment</h1>
    <a href="/student/assignments/bulk-upload" class="btn btn-bulk">Bulk Upload</a>
  </div>

  <form action="/student/assignments/upload" method="post" enctype="multipart/form-data">

    <div class="row">
      <div class="col">
        <label>Title</label>
        <input type="text" name="title" required>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <label>Description</label>
        <textarea name="description"></textarea>
      </div>
    </div>

    <!-- ✅ NEW: PROFESSOR SELECT -->
    <div class="row">
      <div class="col">
        <label>Professor</label>
        <select name="professor" required>
          <option value="">Select Professor</option>
          <% professors.forEach(function(prof){ %>
            <option value="<%= prof.id %>"><%= prof.name %></option>
          <% }) %>
        </select>
      </div>
    </div>
    <!-- ✅ END -->

    <div class="row">
      <div class="col">
        <label>Category</label>
        <select name="category">
          <option value="Assignment">Assignment</option>
          <option value="Thesis">Thesis</option>
          <option value="Report">Report</option>
        </select>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <label>File (PDF only)</label>
        <input type="file" name="file" accept="application/pdf" required>
      </div>
    </div>

    <div class="actions">
      <a href="/student/dashboard" class="btn btn-back">Back to Dashboard</a>
      <button class="btn btn-upload">Upload</button>
    </div>

  </form>
</div>

</body>
</html>
