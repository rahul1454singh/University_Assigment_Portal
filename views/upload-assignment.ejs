<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Upload Assignment</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />

  <style>
    :root{
      --bg:#f3f5f9;
      --card:#ffffff;
      --muted:#666;
      --accent:#3551a1;
      --back:#555;
      --bulk:#07bd07;
      --radius:10px;
      --max-width:760px;
      --pad:20px;
      --shadow:0 10px 30px rgba(0,0,0,0.06);
    }

    * { box-sizing: border-box; }

    html, body {
      height: 100%;
      margin: 0;
    }

    body{
      font-family: "Segoe UI", Arial, sans-serif;
      background: var(--bg);
      display: flex;
      flex-direction: column;
    }

    .content-grow {
      flex: 1 0 auto;
      padding: 40px 16px;
      display: flex;
      justify-content: center;
      align-items: flex-start;
    }

    .container{
      width: 100%;
      max-width: var(--max-width);
      background: var(--card);
      border-radius: var(--radius);
      padding: var(--pad);
      box-shadow: var(--shadow);
    }

    .header-row{
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 18px;
      flex-wrap: wrap;
      gap: 10px;
    }

    h1{
      margin: 0;
      font-size: 28px;
    }

    .row{
      display: flex;
      gap: 14px;
      margin-bottom: 14px;
      flex-wrap: wrap;
    }

    .col{
      flex: 1;
      min-width: 200px;
    }

    label{
      font-weight: 600;
      color: var(--muted);
      font-size: 14px;
      margin-bottom: 6px;
      display: block;
    }

    input, textarea, select{
      width: 100%;
      padding: 10px 12px;
      border-radius: 8px;
      border: 1px solid #e6e9ee;
      font-size: 14px;
      font-family: inherit;
    }

    textarea{
      min-height: 110px;
      resize: vertical;
    }

    .actions{
      display: flex;
      gap: 10px;
      justify-content: flex-end;
      flex-wrap: wrap;
      margin-top: 10px;
    }

    .btn{
      padding: 10px 16px;
      border-radius: 8px;
      color: #fff;
      font-weight: 700;
      border: none;
      cursor: pointer;
      text-decoration: none;
      display: inline-block;
      text-align: center;
      font-size: 14px;
    }

    .btn-back{ background: var(--back); }
    .btn-upload{ background: var(--accent); }
    .btn-bulk{ background: var(--bulk); }

    .msg-error{
      background: #ffe6e6;
      color: #c0392b;
      padding: 10px;
      border-radius: 8px;
      font-weight: 700;
      margin-bottom: 14px;
      font-size: 14px;
    }

    .msg-success{
      background: #e9f7ee;
      color: #177a3b;
      padding: 10px;
      border-radius: 8px;
      font-weight: 700;
      margin-bottom: 14px;
      font-size: 14px;
    }

    /* Footer */
    footer {
      flex-shrink: 0;
      text-align: center;
      padding: 30px 0;
      width: 100%;
    }

    .footer-brand {
      font-weight: 800;
      font-size: 14px;
      color: #000;
      margin-bottom: 2px;
    }

    .footer-copyright {
      font-size: 13px;
      color: #666;
    }

    /* =====================
       TABLET
    ===================== */
    @media (max-width: 768px){
      h1 { font-size: 24px; }
      .content-grow { padding: 28px 14px; }
      .container { padding: 18px; }
    }

    /* =====================
       MOBILE
    ===================== */
    @media (max-width: 480px){
      h1 { font-size: 22px; }

      .content-grow {
        padding: 18px 10px;
      }

      .container {
        padding: 16px;
      }

      .col {
        min-width: 100%;
      }

      .actions {
        justify-content: stretch;
      }

      .btn {
        width: 100%;
        padding: 12px;
        font-size: 14px;
      }

      .btn-bulk {
        width: 100%;
      }
    }
  </style>
</head>
<body>

<div class="content-grow">
  <div class="container">

    <div class="header-row">
      <h1>Upload Assignment</h1>
      <a href="/student/assignments/bulk-upload" class="btn btn-bulk">
        Bulk Upload
      </a>
    </div>

    <% if (error) { %>
      <div class="msg-error"><%= error %></div>
    <% } %>

    <% if (success) { %>
      <div class="msg-success"><%= success %></div>
    <% } %>

    <form action="/student/assignments/upload" method="POST" enctype="multipart/form-data">

      <div class="row">
        <div class="col">
          <label>Title</label>
          <input type="text" name="title" required>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <label>Description</label>
          <textarea name="description"></textarea>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <label>Professor</label>
          <select name="professor" required>
            <option value="">Select Professor</option>
            <% if (professors && professors.length) { %>
              <% professors.forEach(prof => { %>
                <option value="<%= prof._id %>">
                  <%= prof.fullName || prof.name %>
                </option>
              <% }) %>
            <% } %>
          </select>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <label>Category</label>
          <select name="category">
            <option value="Assignment">Assignment</option>
            <option value="Thesis">Thesis</option>
            <option value="Report">Report</option>
          </select>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <label>File (PDF only)</label>
          <input type="file" name="file" accept="application/pdf" required>
        </div>
      </div>

      <div class="actions">
        <a href="/student/dashboard" class="btn btn-back">
          Back to Dashboard
        </a>
        <button type="submit" class="btn btn-upload">
          Upload
        </button>
      </div>

    </form>
  </div>
</div>

<footer role="contentinfo">
  <div class="footer-brand">University Management</div>
  <div class="footer-copyright">Â© 2026 Your University Dashboard</div>
</footer>

</body>
</html>
