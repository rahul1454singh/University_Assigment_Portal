<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Users List</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <style>
    :root { --blue:#4b6cb7; --card:#fff; --bg:#f3f5f9; }
    * { box-sizing: border-box; }

    html, body { height: 100%; }

    body { 
      font-family: "Segoe UI", sans-serif; 
      margin:0; 
      background:var(--bg); 
      color:#333;
      display: flex;
      flex-direction: column; 
    }

    .navbar {
      background:var(--blue);
      color:#fff;
      padding:10px 20px;
      display:flex;
      justify-content:space-between;
      align-items:center;
      gap:12px;
      flex-wrap:wrap;
    }

    .navbar a {
      color:#fff;
      text-decoration:none;
      font-weight:600;
      margin-left:12px;
    }

    .btn-create {
      background:var(--blue);
      color:#fff;
      padding:8px 12px;
      border-radius:6px;
      text-decoration:none;
      font-weight:700;
    }

    .container { 
      max-width:1000px; 
      margin:18px auto; 
      background:var(--card); 
      border-radius:10px; 
      padding:18px; 
      box-shadow:0 3px 10px rgba(0,0,0,.08);
      flex: 1 0 auto; 
      width: 95%;
    }

    h1 {
      text-align:center;
      margin:6px 0 18px;
      font-size:22px;
    }

    .filters {
      display:flex;
      gap:12px;
      justify-content:center;
      flex-wrap:wrap;
      margin-bottom:12px;
    }

    .filters input,
    .filters select {
      padding:8px 10px;
      height:38px;
      border-radius:6px;
      border:1px solid #ccc;
      font-size:13px;
      min-width:180px;
      width:auto;
    }

    .table-wrap {
      overflow-x:auto;
      width:100%;
    }

    table {
      width:100%;
      border-collapse:collapse;
      margin-top:6px;
      min-width:720px;
    }

    th, td {
      padding:10px;
      border:1px solid #ddd;
      font-size:14px;
      text-align:left;
      white-space:nowrap;
    }

    th {
      background:var(--blue);
      color:#fff;
      font-weight:700;
    }

    tr:nth-child(even){ background:#f2f6ff }
    tr:nth-child(odd){ background:#e6edff }

    .btn {
      text-decoration:none;
      padding:6px 10px;
      border-radius:5px;
      color:#fff;
      font-weight:700;
      font-size:12px;
      margin-right:6px;
      display:inline-block;
    }

    .btn-edit { background:#ffc107; color:#1b1b1b; }
    .btn-delete { background:#dc3545; }

    .pagination {
      text-align:center;
      margin-top:12px;
      display:flex;
      justify-content:center;
      align-items:center;
      gap:10px;
      flex-wrap:wrap;
    }

    .pagination button {
      padding:6px 10px;
      border:0;
      border-radius:6px;
      background:var(--blue);
      color:#fff;
      cursor:pointer;
      font-weight:700;
    }

    .pagination button:disabled {
      background:#9aa9d6;
      cursor:default;
    }

    .toast {
      position:fixed;
      right:20px;
      top:20px;
      z-index:9999;
      display:none;
      border-radius:8px;
      box-shadow:0 6px 18px rgba(0,0,0,.12);
      overflow:hidden;
      max-width:90%;
    }

    .toast .inner {
      padding:12px 14px;
      font-weight:600;
      display:flex;
      align-items:center;
      gap:8px;
      flex-wrap:wrap;
    }

    .toast.success { background:#d4edda; color:#155724; }
    .toast.error { background:#f8d7da; color:#721c24; }

    .toast .close {
      margin-left:auto;
      cursor:pointer;
      opacity:.8;
      font-weight:700;
    }

    .app-footer { 
      padding: 16px; 
      text-align: center; 
      color: #5b6b6b; 
      font-size: 13px;
      flex-shrink: 0;
    }

    /* =====================
       TABLET
    ===================== */
    @media (max-width: 800px){
      .filters {
        flex-direction:column;
        align-items:stretch;
      }

      .filters input,
      .filters select {
        width:100%;
      }

      .navbar {
        flex-direction:column;
        align-items:flex-start;
      }

      .btn-create {
        width:100%;
        text-align:center;
      }
    }

    /* =====================
       MOBILE
    ===================== */
    @media (max-width: 480px){
      h1 { font-size:20px; }

      .container {
        padding:14px;
      }

      .btn {
        margin-bottom:6px;
      }

      .toast {
        right:10px;
        top:10px;
      }
    }
  </style>
</head>
<body>
  <div class="navbar">
    <div style="font-size:16px; font-weight:700;">Users List</div>
    <div>
      <a href="/admin/dashboard">Dashboard</a>
      <a href="/admin/users/create" class="btn-create">Create User</a>
    </div>
  </div>

  <div class="container">
    <h1>All Users</h1>

    <div id="toast" class="toast" role="status" aria-live="polite" aria-atomic="true">
      <div id="toast-inner" class="inner"></div>
    </div>

    <div class="filters">
      <input id="searchInput" type="text" placeholder="Search by name or email">
      <select id="roleFilter">
        <option value="">All Roles</option>
        <option>Student</option>
        <option>Professor</option>
        <option>HOD</option>
      </select>
      <select id="deptFilter">
        <option value="">All Departments</option>
        <% 
          const deptSet = {};
          users.forEach(u => { if (u.department) deptSet[u.department._id] = u.department.name; });
        %>
        <% Object.keys(deptSet).forEach(k => { %>
          <option value="<%= deptSet[k] %>"><%= deptSet[k] %></option>
        <% }) %>
      </select>
    </div>

    <div class="table-wrap">
      <table id="usersTable">
        <thead>
          <tr>
            <th>Name</th><th>Email</th><th>Role</th>
            <th>Department</th><th>Status</th><th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(u => { %>
            <tr>
              <td><%= u.name %></td>
              <td><%= u.email %></td>
              <td><%= u.role %></td>
              <td><%= u.department ? u.department.name : '' %></td>
              <td><%= u.status ? u.status : "Active" %></td>
              <td>
                <a href="/admin/users/edit/<%= u._id %>" class="btn btn-edit">Edit</a>
                <a href="/admin/users/delete/<%= u._id %>" class="btn btn-delete"
                   onclick="return confirm('Are you sure you want to delete this user?');">
                   Delete
                </a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <div class="pagination">
      <button id="prevBtn">Prev</button>
      <span id="pageInfo">1 / 1</span>
      <button id="nextBtn">Next</button>
    </div>
  </div>

  <footer class="app-footer">
    <div style="font-weight:800; color:#222;">University Management</div>
    <div>Â© <%= new Date().getFullYear() %> Your University</div>
  </footer>

