<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Edit - <%= assignment.title %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <style>
    :root{
      --bg:#f3f5f9;
      --card:#fff;
      --muted:#666;
      --accent:#3551a1;
      --muted-btn:#555;
      --danger:#d9534f;
      --radius:10px;
      --shadow:0 10px 30px rgba(0,0,0,0.04);
    }

    body{
      font-family:"Segoe UI",Arial,sans-serif;
      background:var(--bg);
      margin:0;
      padding:28px;
    }

    .wrap{
      max-width:760px;
      margin:auto;
      background:var(--card);
      padding:22px;
      border-radius:var(--radius);
      box-shadow:var(--shadow);
    }

    h1{margin:0 0 12px;font-size:26px}

    label{display:block;margin-top:16px;font-weight:700}
    input,textarea,select{
      width:100%;
      padding:10px 12px;
      margin-top:8px;
      border-radius:8px;
      border:1px solid #e6e9ee;
      font-size:14px;
    }
    textarea{min-height:120px}

    .msg-error{background:#fff0f0;color:#8b1d1d;padding:10px;border-radius:8px;margin-bottom:12px}
    .msg-success{background:#eaf0ff;color:#0b2b66;padding:10px;border-radius:8px;margin-bottom:12px}

    .muted{color:var(--muted);font-size:13px;margin-top:10px}

    .file-row{display:flex;gap:10px;align-items:center;margin-top:8px;flex-wrap:wrap}
    .file-row a{
      padding:8px 12px;
      border-radius:8px;
      border:1px solid #e6e9ee;
      background:#fff;
      text-decoration:none;
      font-weight:700;
      color:var(--accent);
    }

    .actions{
      margin-top:18px;
      display:flex;
      gap:10px;
      justify-content:flex-end;
      flex-wrap:wrap;
    }

    .btn{
      padding:10px 14px;
      border-radius:8px;
      border:0;
      cursor:pointer;
      font-weight:700;
      display:inline-block;
      text-decoration:none;
    }

    .btn.save{background:var(--accent);color:#fff}
    .btn.cancel{
      background:#777;
      color:#fff;
      text-decoration:none;
    }

    .btn.cancel:hover,
    .btn.cancel:focus,
    .btn.cancel:active{
      text-decoration:none;
    }

    @media(max-width:600px){
      .btn{width:100%}
    }
  </style>
</head>
<body>

<div class="wrap">
  <h1>Edit Assignment</h1>

  <% if (error) { %>
    <div class="msg-error"><%= error %></div>
  <% } %>

  <% if (success) { %>
    <div class="msg-success"><%= success %></div>
  <% } %>

  <!-- ðŸ”´ REJECTION MESSAGE (ONLY FOR REJECTED) -->
  <% if (assignment.status === 'Rejected') { %>
    <div class="msg-error">
      <strong>Rejected:</strong>
      <%= assignment.rejectionRemarks || 'Please review the feedback and resubmit.' %>
    </div>
  <% } %>

  <!-- ðŸš« LOCKED STATES -->
  <% if (assignment.status === 'Submitted' || assignment.status === 'Approved') { %>
    <div class="muted">This assignment cannot be edited.</div>
    <div style="margin-top:14px">
      <a href="/student/assignments/<%= assignment._id %>" class="btn cancel">Back</a>
    </div>

  <% } else { %>

    <!-- âœ… EDIT / RESUBMIT FORM -->
    <form
      id="editForm"
      method="post"
      action="<%= assignment.status === 'Rejected'
        ? '/student/assignments/' + assignment._id + '/resubmit'
        : '/student/assignments/' + assignment._id + '/edit' %>"
      enctype="multipart/form-data"
    >

      <label>Title</label>
      <input type="text" name="title" value="<%= assignment.title %>" required>

      <label>Description</label>
      <textarea name="description"><%= assignment.description || '' %></textarea>

      <label>Category</label>
      <select name="category" required>
        <option value="Assignment" <%= assignment.category==='Assignment'?'selected':'' %>>Assignment</option>
        <option value="Thesis" <%= assignment.category==='Thesis'?'selected':'' %>>Thesis</option>
        <option value="Report" <%= assignment.category==='Report'?'selected':'' %>>Report</option>
      </select>

      <label>Current File</label>
      <% if (assignment.file && assignment.file.path) { %>
        <div class="file-row">
          <a href="<%= assignment.file.path %>" target="_blank">View PDF</a>
          <span class="muted"><%= assignment.file.originalname %></span>
        </div>
      <% } else { %>
        <div class="muted">No file uploaded</div>
      <% } %>

      <label>
        <%= assignment.status === 'Rejected'
          ? 'Upload new file (optional)'
          : 'Replace file (optional)' %>
      </label>
      <input type="file" name="file" accept="application/pdf">

      <div class="muted">PDF only, max 10MB.</div>

      <div class="actions">
        <a href="/student/assignments" class="btn cancel">Cancel</a>

        <button type="submit" class="btn save">
          <%= assignment.status === 'Rejected'
            ? 'Resubmit Assignment'
            : 'Save Changes' %>
        </button>
      </div>
    </form>

  <% } %>
</div>

<!-- âœ… RESUBMIT SUCCESS HANDLER -->
<script>
  const form = document.getElementById("editForm");

  if (form && form.action.includes("/resubmit")) {
    form.addEventListener("submit", async function (e) {
      e.preventDefault();

      const res = await fetch(form.action, {
        method: "POST",
        body: new FormData(form)
      });

      const data = await res.json();

      if (data.success) {
        alert("Your resubmitted assignment has been sent to your professor.");
        window.location.href = "/student/assignments";
      } else {
        alert(data.message || "Resubmission failed");
      }
    });
  }
</script>

</body>
</html>
